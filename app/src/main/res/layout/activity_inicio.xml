<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fiec.ndr.Inicio">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OPCIONES"
        android:id="@+id/txt_nombre"
        android:textStyle="bold"
        android:textSize="50dp"
        android:textColor="#087f2b"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="15dp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:rowCount="3"
        android:columnCount="4"
        android:orientation="vertical"
        android:layout_below="@+id/txt_nombre"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/image_height"
            android:layout_margin="20dp"
            android:id="@+id/btn_nuevoitem"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@mipmap/nuevo_item"
            android:background="@drawable/rounded_corners"
            android:onClick="nuevoFormulario"
            android:layout_row="0"
            android:layout_column="0" />

        <ImageButton
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/image_height"
            android:layout_margin="20dp"
            android:id="@+id/btn_buscaritem"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@mipmap/buscar"
            android:background="@drawable/rounded_corners"
            android:layout_row="0"
            android:layout_column="1" />

        <ImageButton
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/image_height"
            android:layout_margin="20dp"
            android:id="@+id/btn_nuevocarro"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@mipmap/formularios"
            android:background="@drawable/rounded_corners"
            android:layout_row="1"
            android:layout_column="0"/>

        <ImageButton
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/image_height"
            android:layout_margin="20dp"
            android:id="@+id/btn_sincronizarbase"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@mipmap/sincronizar"
            android:background="@drawable/rounded_corners"
            android:layout_row="1"
            android:layout_column="1"/>

        <ImageButton
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/image_height"
            android:layout_margin="20dp"
            android:id="@+id/btn_informacion"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@mipmap/informacion"
            android:background="@drawable/rounded_corners"
            android:layout_row="2"
            android:layout_column="0"/>

        <ImageButton
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/image_height"
            android:layout_margin="20dp"
            android:id="@+id/imageButton5"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@mipmap/salir"
            android:background="@drawable/rounded_corners"
            android:onClick="salirSistema"
            android:layout_row="2"
            android:layout_column="1"/>
    </GridLayout>

</RelativeLayout>
